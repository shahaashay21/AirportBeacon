<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/untitled1"
    tools:context="info.androidhive.listviewfeed.BoardingPass">

    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/bPass"
        android:textColor="#ffffff"
        android:backgroundTint="#ffa64d"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Assist"
        android:id="@+id/assist"
        android:onClick="showMap"
        android:background="#ffa64d"
        android:textColor="#ffffff"
        android:layout_below="@+id/bPass"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Boarding Pass"
        android:id="@+id/textView"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gate Number"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Boarding Group"
        android:textColor="#ffffff"
        android:id="@+id/textView5"
        android:layout_above="@+id/time"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time "
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginBottom="28dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/terminal"
        android:textColor="#ffffff"
        android:layout_below="@+id/pname"
        android:layout_alignEnd="@+id/bPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bgroup"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/time"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/map" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/map"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="From"
        android:id="@+id/textView9"
        android:textColor="#ffffff"
        android:layout_above="@+id/textView6"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/from"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignEnd="@+id/time"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_above="@+id/map"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/to"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/time"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nullM"
        android:textColor="#db2e2e"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/assist" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Boarding Postition"
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_below="@+id/bgroup"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/bpos"
        android:layout_alignTop="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/bPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Passenger"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_below="@+id/assist"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/pname"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignEnd="@+id/bPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Flight Number"
        android:id="@+id/textView8"
        android:layout_below="@+id/terminal"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/fnumber"
        android:layout_below="@+id/textView2"
        android:layout_alignEnd="@+id/bgroup"
        android:textColor="#ffffff" />

</RelativeLayout>
